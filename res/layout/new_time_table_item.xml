<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/redesign_shape_card"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lecture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="#E5E4E2"
            android:gravity="right"
            android:padding="5dp"
            android:text="Subject" />

        <TextView
            android:id="@+id/timetable_lecture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left"
            android:padding="5dp"
            android:text="Accounts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#E5E4E2"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:text="Time" />

        <TextView
            android:id="@+id/timetabletime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left"
            android:padding="5dp"
            android:text="7:00 to 9:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/prof"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#E5E4E2"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:text="Professor" />

        <TextView
            android:id="@+id/timetable_prof"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left"
            android:padding="5dp"
            android:text="Prasad Sir" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRemark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/remark"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="#E5E4E2"
            android:gravity="right|center_vertical"
            android:padding="5dp"
            android:text="Remark" />

        <TextView
            android:id="@+id/timetable_remark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="left"
            android:padding="5dp"
            android:text="Repeat Lecture" />
    </LinearLayout>

</LinearLayout>